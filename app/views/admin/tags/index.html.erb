<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">Manage Tags</h1>
  <div class="mb-4">
    <%= link_to 'Add New tag', new_admin_tag_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <table class="min-w-full ">
    <thead>
      <tr>
        <th class="py-2 px-4 border-b">Name</th>
        <th class="py-2 px-4 border-b">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td class="py-2 px-4 text-center border-b"><%= tag.name %></td>
          <td class="py-2 px-4 text-center border-b">
            <%= link_to 'Edit', edit_admin_tag_path(tag), class: 'text-blue-500 hover:text-blue-700' %>
            <%= button_to 'Delete', admin_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-center text-red-500 hover:text-red-700' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="flex items-center justify-between">
    <%= link_to 'Back', admin_dashboard_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-5" %>
  </div>
</div>
