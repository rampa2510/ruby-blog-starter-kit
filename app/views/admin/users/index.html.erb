<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">Manage Users</h1>
  
  <div class="mb-4">
    <%= link_to 'Add New User', new_admin_user_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <table class="min-w-full">
    <thead>
      <tr>
        <th class="py-2 px-4 border-b">Email</th>
        <th class="py-2 px-4 border-b">Admin?</th>
        <th class="py-2 px-4 border-b">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="py-2 px-4 border-b text-center"><%= user.email %></td>
          <td class="py-2 px-4 border-b text-center"><%= user.admin? ? 'Yes' : 'No' %></td>
          <td class="py-2 px-4 border-b text-center">
            <%= link_to 'Edit', edit_admin_user_path(user), class: 'text-blue-500 hover:text-blue-700' %>
            <%= button_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <div class="flex items-center justify-between">
    <%= link_to 'Back', admin_dashboard_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-5" %>
  </div>
</div>
