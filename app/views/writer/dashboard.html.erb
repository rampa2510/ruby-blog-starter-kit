<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">Writer Dashboard</h1>


  <div class="mb-4">
    <%= link_to 'Manage Posts', writer_posts_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>


  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <h2 class="text-xl font-bold mb-4">Post Statistics</h2>
    <p>Total Posts: <%= @posts.count %></p>
    <p>Draft Posts: <%= @posts.draft.count %></p>
    <p>Submitted Posts: <%= @posts.submitted.count %></p>
    <p>Published Posts: <%= @posts.published.count %></p>
    <p>Posts Needing Changes: <%= @posts.changes_requested.count %></p>
    <p>Archived Posts: <%= @posts.archived.count %></p>
  </div>


</div>
