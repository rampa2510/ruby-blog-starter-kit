<%= content_for :head do %>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,300;1,400&family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background-color: #f7f7f7;
    }
    .prose {
      font-family: 'Merriweather', serif;
    }
  </style>
<% end %>
<div class="max-w-4xl mx-auto py-8">
  <article class="shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4">
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @post.title %></h1>
      
      <div class="text-gray-600 text-sm mb-4">
        <span>By <%= @post.author.email %></span>
        <span class="mx-2">|</span>
        <span><%= @post.created_at.strftime("%B %d, %Y") %></span>
      </div>

      <p class="text-xl text-gray-700 mb-6"><%= @post.sub_text %></p>

      <div class="prose prose-lg max-w-none mb-6">
        <%= @post.body %>
      </div>

      <% if @post.tags.any? %>
        <div class="mt-6">
          <h2 class="text-xl font-semibold mb-2">Tags:</h2>
          <div class="flex flex-wrap">
            <% @post.tags.each do |tag| %>
              <span class="bg-blue-100 text-blue-800 text-sm font-medium mr-2 mb-2 px-2.5 py-0.5 rounded-full">
                <%= tag.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-between items-center">
      <%= link_to 'Edit', edit_writer_post_path(@post), class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded transition duration-300 ease-in-out" if current_user == @post.author %>
      <%= link_to 'Back to Posts', writer_posts_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-2 px-4 rounded transition duration-300 ease-in-out" %>
    </div>
  </article>
</div>
