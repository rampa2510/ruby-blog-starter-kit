  <%= form_with(model: [:writer, post], local: true, class: "shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>

    <% if post.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">Error:</strong>
        <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-bold mb-2" %>
      <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :sub_text, class: "block text-sm font-bold mb-2" %>
      <%= form.text_area :sub_text, rows: 3, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4">
      <%= form.label :body, class: "block text-sm font-bold mb-2" %>
      <%= form.rich_text_area :body, class: "trix-content" %>
    </div>

    <div class="mb-4">
      <%= form.label :tag_ids, "Tags", class: "block text-sm font-bold mb-2" %>
      <div class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name do |b| %>
          <div class="inline-block mr-4">
            <%= b.check_box(class: "mr-1") %>
            <%= b.label(class: "text-sm") %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit submit_text, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'Back', writer_posts_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>


  <% end %>

