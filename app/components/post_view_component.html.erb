<div class="container mx-auto px-4 sm:px-6 md:px-8 lg:px-16 xl:px-[25%] max-w-screen-2xl">
  <div class="max-w-4xl mx-auto py-8">
    <article class="overflow-hidden">
      <div class="px-4 sm:px-6 md:px-8 lg:px-0">
        <h1 class="text-3xl font-kode-mono font-bold text-gray-900 dark:text-gray-100 mb-2"><%= @post.title %></h1>
        
        <div class="text-gray-600 dark:text-gray-400 text-sm mb-4">
          <span>By <%= @post.author.email %></span>
          <span class="mx-2">|</span>
          <span><%= @post.created_at.strftime("%B %d, %Y") %></span>
        </div>
        <p class="text-xl text-gray-700 dark:text-gray-300 mb-6"><%= @post.sub_text %></p>
        <div class="prose prose-lg max-w-none mb-6 dark:prose-invert">
          <%= @post.body %>
        </div>
        <% if @post.tags.any? %>
          <div class="mt-6">
            <h2 class="text-xl font-semibold mb-2">Tags:</h2>
            <div class="flex flex-wrap">
              <% @post.tags.each do |tag| %>
                <span class="bg-blue-100 text-blue-800 dark:bg-blue-800 dark:text-blue-100 text-sm font-medium mr-2 mb-2 px-2.5 py-0.5 rounded-full">
                  <%= tag.name %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </article>
  </div>
</div>
